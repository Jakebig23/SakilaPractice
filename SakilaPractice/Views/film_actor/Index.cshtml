@model IEnumerable<SakilaPractice.Models.film_actor>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<style>
    tr:nth-child(even) {
        background-color: lightgrey;
        border: double;
    }
</style>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.film_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.last_update)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.film_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_update)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.actor_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.actor_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.actor_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
